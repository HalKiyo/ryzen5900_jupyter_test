   "source": [
    "def netcdf_to_csv(precip, csv_path='precip.csv'):\n",
    "    precip = precip.reshape(-1)\n",
    "    df_precip = pd.DataFrame(data=precip)\n",
    "    df_precip.to_csv(csv_path)"
   ]
  },
